<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" controllerName="com.public.storage.pao.controller.Main" >
	
	<TableSelectDialog id="propertyFragment" noDataText="No Property Found" title="Select Property" search="onValueHelpDialogSearchProperty" confirm="onValueHelpDialogCloseProperty" cancel="onValueHelpDialogCloseProperty" items="{
			path : 'plantsModel>/',
			sorter : {
				path : 'Werks',
				descending : false
			}
		}">
		<ColumnListItem vAlign="Middle">
			<cells>
				<Text text="{plantsModel>Werks}"/>
				<Text text="{plantsModel>Name1T001w}" />
				<Text text="{plantsModel>Name2}" />
				<Text text="{plantsModel>Stras}" />
				<Text text="{plantsModel>Pstlz}" />
				
				<Text text="{plantsModel>Ort01}" />
					<Text text="{plantsModel>Land1}" />
			</cells>
		</ColumnListItem>
		<columns>
			<Column width="12em">
				<header>
					<Text text="Plant" />
				</header>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<header>
					<Text text="Name" />
				</header>
			</Column>
			<Column minScreenWidth="Desktop" demandPopin="true" hAlign="End">
				<header>
					<Text text="Property" />
				</header>
			</Column>
			<Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
				<header>
					<Text text="Street" />
				</header>
			</Column>
			<Column hAlign="End">
				<header>
					<Text text="Postal Code" />
				</header>
			</Column>
			<Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
				<header>
					<Text text="City" />
				</header>
			</Column>
			<Column hAlign="End">
				<header>
					<Text text="Country" />
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>