<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="com.public.storage.pao.controller.PropertyNotes"
    xmlns="sap.uxap"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form" height="100%">

    <ObjectPageLayout id="ObjectPageLayout" upperCaseAnchorBar="false">
        <headerTitle>
            <ObjectPageDynamicHeaderTitle>
                <expandedHeading>
                    <m:Title text="Property Notes" wrapping="true" />
                </expandedHeading>

                <snappedHeading>
                    <m:HBox>
                        <m:VBox>
                            <m:Title text="Property Notes" wrapping="true"/>
                            <m:Label text="Fill your Property Notes"/>
                        </m:VBox>
                    </m:HBox>
                </snappedHeading>

                <expandedContent>
                    <m:Label text="Fill your Property Notes"/>
                </expandedContent>

                <snappedTitleOnMobile>
                    <m:Title text="Property Notes"/>
                </snappedTitleOnMobile>

                <actions>
                    <m:Button text="Save and Continue" enabled="true" icon="sap-icon://save" type="Emphasized" press="onPressSavePropertyNotes"></m:Button>
                </actions>
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>

        <headerContent>
            <m:FlexBox wrap="Wrap" fitContainer="true">
                <m:Avatar class="sapUiMediumMarginEnd sapUiSmallMarginBottom" src="sap-icon://notes" displayShape="Circle" initials="PN" displaySize="L"/>

                <m:VBox class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
                    <m:Title level="H4" titleStyle="H4" text="Plant" class="sapUiTinyMarginBottom">
                    </m:Title>
                    <m:Label text="{plantsModel>/plant}"/>
                </m:VBox>

                <m:VBox class="sapUiSmallMarginBottom sapUiLargeMarginEnd">
                    <m:Title level="H4" titleStyle="H4" text="Property" class="sapUiTinyMarginBottom" />
                    <m:Label text="{plantsModel>/property}"/>
                </m:VBox>

                <m:VBox class="sapUiSmallMarginBottom">
                    <m:Title level="H4" titleStyle="H4" text="Address" class="sapUiTinyMarginBottom" />
                    <m:Label wrapping="true" text="{plantsModel>/address}"/>
                </m:VBox>
            </m:FlexBox>
        </headerContent>

        <sections>

            <ObjectPageSection titleUppercase="false" id="personalSection" title="Property Notes">
                <subSections>
                    <ObjectPageSubSection id="personalSectionSS1" titleUppercase="false">
                        <blocks>
                            <f:SimpleForm id="basicDetails" editable="true" layout="ResponsiveGridLayout"  singleContainerFullSize="false">
                                <f:content>
                        
                                    <m:Label  text="{i18n>propDeatures}" />
                                    <m:TextArea rows="3" growing="true" growingMaxLines="9" width="100%" change="onDetectChange" valueStateText="Value cannot be blank" maxLength="500" valueState="{/PropertyFeatures}" id="propFeature" value="{plantBasicDetailsModel>/PropertyFeatures}" />
                                    <m:Label  text="{i18n>drivingDirection}" />
                                    <m:TextArea rows="3" growing="true" growingMaxLines="9" width="100%" change="onDetectChange" valueStateText="Value cannot be blank" maxLength="500" valueState="{/DrivingDirections}" id="driDirection" value="{plantBasicDetailsModel>/DrivingDirections}" />
                
                                    <m:Label text="{i18n>specialNotes}" />
                                    <m:TextArea rows="3" growing="true" growingMaxLines="9" width="100%" change="onDetectChange" valueStateText="Value cannot be blank" maxLength="500" valueState="{/SpecialNotes}" id="spNotes" value="{plantBasicDetailsModel>/SpecialNotes}" />

                                </f:content>
                            </f:SimpleForm>

                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>

        </sections>
    </ObjectPageLayout>
</mvc:View>