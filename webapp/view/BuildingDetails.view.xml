                    <Input id="name1" value="{plantBasicDetailsModel>/BusinessUnitType}" />

                    <Label text="{i18n>noOfStories1}" />
                    <Input id="stories1" value="{plantBasicDetailsModel>/CustomerCode}" />

                    <Label text="{i18n>buildNum2}" />
                    <Input id="num2" showValueHelp="true" value="{plantBasicDetailsModel>/Active}" />
                    <Label text="{i18n>buildName2}" />
