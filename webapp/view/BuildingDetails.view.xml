<mvc:View controllerName="com.public.storage.pao.controller.BuildingDetails"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <ScrollContainer height="100%" width="100%" vertical="true" focusable="true">
        <!-- <VBox class="sapUiSmallMargin">
            <Title title=""/>
        </VBox> -->
        <Table headerText="" id="idAttributestTab" items="{path: 'buildingModel>/'}" width="100%" noDataText="" mode="None" showSeparators="All" growing="true" growingThreshold="20" growingScrollToLoad="true">
            <headerToolbar>
                <OverflowToolbar width="auto" height="auto" design="Transparent" visible="true" enabled="true">
                    <Title text="{i18n>buildingDetails} (Plant - {plantsModel>/plant} &amp; Property - {plantBasicDetailsModel>/LegacyPropertyNumber} - {plantsModel>/address})"  titleStyle="Auto" width="auto" textAlign="Begin" visible="true" wrapping="false" />
                    <ToolbarSpacer />
                    <Button text="Add" icon="sap-icon://add" type="Emphasized" width="auto" visible="true" iconDensityAware="false" press="onAdd" />
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column minScreenWidth="Desktop" width="10em" importance="High"  demandPopin="true" popinDisplay="Inline">
                    <Label design="Bold" text="Building Number" wrapping="true" />
                </Column>
                <Column minScreenWidth="Desktop" width="13em" importance="High" demandPopin="true" popinDisplay="Inline">
                    <Label design="Bold" text="Building Name" wrapping="true" />
                </Column>
                <Column minScreenWidth="Desktop" width="13em" importance="High" demandPopin="true" popinDisplay="Inline">
                    <Label design="Bold" text="No. of Storeys" />
                </Column>
                <Column minScreenWidth="Desktop" width="18em" importance="High" demandPopin="true" popinDisplay="Inline">
                    <Label design="Bold" text="Description 1" wrapping="true" />
                </Column>
                <Column minScreenWidth="Desktop" width="18em"  importance="High" demandPopin="true" popinDisplay="Inline">
                    <Label design="Bold" text="Description 2" />
                </Column>
                <Column minScreenWidth="Desktop" importance="High" demandPopin="true" popinDisplay="Inline">
                    <Label design="Bold" text="" />
                </Column>
               
            </columns>
            <items>
                <ColumnListItem>
                    <cells />
                </ColumnListItem>
            </items>
            <!-- <IllustratedMessage id="illustratedMessageTab" visible="true" title="dummy" description="check" illustrationType="sapIllus-ErrorScreen">
                
            </IllustratedMessage> -->
        </Table>
        <VBox id="illusSection">
        <core:Fragment fragmentName="com.public.storage.pao.fragments.BuildingDetails.IllustrativeMessage" type="XML"/>
        </VBox>

           
            <VBox alignContent="End" alignItems="End">
                <Button text="Save and Continue" enabled="true" type="Emphasized" press="onPressSaveBuldingDetails"></Button>
            </VBox>


    </ScrollContainer>
</mvc:View>