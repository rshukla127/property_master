<mvc:View xmlns:mvc="sap.ui.core.mvc"
controllerName="com.public.storage.pao.controller.BuildingDetails"
	xmlns="sap.uxap"
	xmlns:m="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" height="100%">

	<ObjectPageLayout id="ObjectPageLayout" upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<expandedHeading>
					<m:Title text="Building Details" wrapping="true" />
				</expandedHeading>

				<snappedHeading>
					<m:HBox>
						<m:VBox>
							<m:Title text="Building Details" wrapping="true"/>
							<m:Label text="Fill your building details"/>
						</m:VBox>
					</m:HBox>
				</snappedHeading>

				<expandedContent>
					<m:Label text="Fill your building details"/>
				</expandedContent>

				<snappedTitleOnMobile>
					<m:Title text="Building Details"/>
				</snappedTitleOnMobile>

				<actions>
					<m:Button text="Save and Continue" enabled="true" type="Emphasized" press="onPressSaveBuldingDetails"></m:Button>
				</actions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>

		<headerContent>
			<m:FlexBox wrap="Wrap" fitContainer="true">
				<!-- <m:Avatar class="sapUiMediumMarginEnd sapUiSmallMarginBottom" displayShape="Square" initials="HF" displaySize="L"/> -->

				<m:VBox class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
					<m:Title level="H4" titleStyle="H4" text="Plant" class="sapUiTinyMarginBottom">
					</m:Title>
					<m:Label text="{plantsModel>/plant}"/>
				</m:VBox>

				<m:VBox class="sapUiSmallMarginBottom sapUiLargeMarginEnd">
					<m:Title level="H4" titleStyle="H4" text="Property" class="sapUiTinyMarginBottom" />
					<m:Label text="{plantsModel>/property}"/>
				</m:VBox>

				<m:VBox class="sapUiSmallMarginBottom">
					<m:Title level="H4" titleStyle="H4" text="Address" class="sapUiTinyMarginBottom" />
					<m:Label wrapping="true" text="{plantsModel>/address}"/>
				</m:VBox>
			</m:FlexBox>
		</headerContent>

		<sections>

			<ObjectPageSection titleUppercase="false" id="personalSection" title="Building Details">
				<subSections>
					<ObjectPageSubSection id="personalSectionSS1"  titleUppercase="false">
						<blocks>
						<m:VBox>
						 <m:VBox>
                            <m:Table headerText="" id="idAttributestTab" items="{path: 'buildingModel>/'}" width="100%" noDataText="" mode="None" showSeparators="All" growing="true" growingThreshold="20" growingScrollToLoad="true">
                                <m:headerToolbar>
                                    <m:OverflowToolbar width="auto" height="auto" design="Transparent" visible="true" enabled="true">
                                        
                                        <m:ToolbarSpacer />
                                        <m:Button text="Add" icon="sap-icon://add" type="Emphasized" width="auto" visible="true" iconDensityAware="false" press="onAdd" />
                                    </m:OverflowToolbar>
                                </m:headerToolbar>
                                <m:columns>
                                    <m:Column minScreenWidth="Desktop" width="10em" importance="High"  demandPopin="true" popinDisplay="Inline">
                                        <m:Label design="Bold" text="Building Number" wrapping="true" />
                                    </m:Column>
                                    <m:Column minScreenWidth="Desktop" width="13em" importance="High" demandPopin="true" popinDisplay="Inline">
                                        <m:Label design="Bold" text="Building Name" wrapping="true" />
                                    </m:Column>
                                    <m:Column minScreenWidth="Desktop" width="13em" importance="High" demandPopin="true" popinDisplay="Inline">
                                        <m:Label design="Bold" text="No. of Stories" />
                                    </m:Column>
                                    <m:Column minScreenWidth="Desktop" width="18em" importance="High" demandPopin="true" popinDisplay="Inline">
                                        <m:Label design="Bold" text="Description 1" wrapping="true" />
                                    </m:Column>
                                    <m:Column minScreenWidth="Desktop" width="18em"  importance="High" demandPopin="true" popinDisplay="Inline">
                                        <m:Label design="Bold" text="Description 2" />
                                    </m:Column>
                                    <m:Column minScreenWidth="Desktop" importance="High" demandPopin="true" popinDisplay="Inline">
                                        <m:Label design="Bold" text="" />
                                    </m:Column>
                                   
                                </m:columns>
                                <m:items>
                                    <m:ColumnListItem>
                                        <m:cells />
                                    </m:ColumnListItem>
                                </m:items>
                               
                            </m:Table>
							 </m:VBox>
							 
                            <m:VBox id="illusSection">
                            <core:Fragment fragmentName="com.public.storage.pao.fragments.MiscDetails.IllustrativeMessage" type="XML"/>
                            </m:VBox>
							</m:VBox>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

		</sections>
	</ObjectPageLayout>
</mvc:View>