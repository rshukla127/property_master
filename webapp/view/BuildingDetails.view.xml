                    <Label text="{i18n>buildName4}" />
                    <Input id="name4" value="{plantBasicDetailsModel>/BusinessUnitType}" />

                    <Label text="{i18n>noOfStories4}" />
                    <Input id="stories4" value="{plantBasicDetailsModel>/CustomerCode}" />

                    <core:Title text="" />
                    <Label text="{i18n>buildNum5}" />
                    <Input id="num5" showValueHelp="true" value="{plantBasicDetailsModel>/Active}" />
                    <Label text="{i18n>buildName5}" />
                    <Input id="name5" value="{plantBasicDetailsModel>/BusinessUnitType}" />

                    <Label text="{i18n>noOfStories5}" />
                    <Input id="stories5" value="{plantBasicDetailsModel>/CustomerCode}" />

                    <Label text="{i18n>apartMentNo1}" />
                    <Input id="nsfFeeEff" showValueHelp="true" value="{plantBasicDetailsModel>/CombinedSurvivingNumber}" />

                    <Label text="{i18n>apartName1}" />
