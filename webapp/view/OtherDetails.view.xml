<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="com.public.storage.pao.controller.OtherDetails"
	xmlns="sap.uxap"
	xmlns:m="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" height="100%">

	<ObjectPageLayout id="ObjectPageLayout" upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<expandedHeading>
					<m:Title text="Property Other Details" wrapping="true" />
				</expandedHeading>

				<snappedHeading>
					<m:HBox>
						<m:VBox>
							<m:Title text="Property Other Details" wrapping="true"/>
							<m:Label text="Fill your property others details"/>
						</m:VBox>
					</m:HBox>
				</snappedHeading>

				<expandedContent>
					<m:Label text="Fill your property others details"/>
				</expandedContent>

				<snappedTitleOnMobile>
					<m:Title text="Property Other Details"/>
				</snappedTitleOnMobile>

				<actions>
					<m:Button text="Save and Continue" icon="sap-icon://save" enabled="true" type="Emphasized" press="onPressSaveOtherDetails"></m:Button>
				</actions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>

		<headerContent>
			<m:FlexBox wrap="Wrap" fitContainer="true">
				<m:Avatar class="sapUiMediumMarginEnd sapUiSmallMarginBottom" src="sap-icon://add-product" displayShape="Circle" initials="OD" displaySize="L"/>

				<m:VBox class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
					<m:Title level="H4" titleStyle="H4" text="Plant" class="sapUiTinyMarginBottom">
					</m:Title>
					<m:Label text="{plantsModel>/plant}"/>
				</m:VBox>

				<m:VBox class="sapUiSmallMarginBottom sapUiLargeMarginEnd">
					<m:Title level="H4" titleStyle="H4" text="Property" class="sapUiTinyMarginBottom" />
					<m:Label text="{plantsModel>/property}"/>
				</m:VBox>

				<m:VBox class="sapUiSmallMarginBottom">
					<m:Title level="H4" titleStyle="H4" text="Address" class="sapUiTinyMarginBottom" />
					<m:Label wrapping="true" text="{plantsModel>/address}"/>
				</m:VBox>
			</m:FlexBox>
		</headerContent>

		<sections>

			<ObjectPageSection titleUppercase="false" id="personalSection" title="Property Other Details">
				<subSections>
					<ObjectPageSubSection id="personalSectionSS1" titleUppercase="false">
						<blocks>
							<f:SimpleForm id="otherDetails" editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false">
								<f:content>

									<m:Label required="true" text="{i18n>keyTraining}" />
									<!-- <m:Input id="keyTrain" valueStateText="Value cannot be blank" valueState="{/KeyTrainingProfessional}" showValueHelp="true" valueHelpRequest="_onValueHelpKeyTraining" valueHelpOnly="true" value="{plantBasicDetailsModel>/KeyTraniningProfessional}" /> -->
									<m:Select id="keyTrain" change="onDetectChange" valueStateText="Value cannot be blank" valueState="{/KeyTrainingProfessional}" selectedKey="{parts: ['plantBasicDetailsModel>/KeyTraniningProfessional'], formatter: '.formatter.getKeyTrainingProffesional'}">
										<m:items>
											<core:Item text="" key="N"/>
											<core:Item text="Y-KPT Center" key="Y" />

										</m:items>
									</m:Select>

									<m:Label text="{i18n>marketClass}" />
									<m:Input id="mClass" showValueHelp="true" valueHelpRequest="_onValueHelpMarketClass" valueHelpOnly="true" value="{plantBasicDetailsModel>/MartketClass}" />
									<m:Label text="{i18n>riskScore}" />
									<m:Select id="riskScore" change="onDetectChange" selectedKey="{parts: ['plantBasicDetailsModel>/RiskScore'], formatter: '.formatter.formatRiskScore'}">
										<m:items>
											<core:Item text="" key="B"/>
											<core:Item text="1" key="On"/>
											<core:Item text="2" key="Tw" />
											<core:Item text="3" key="Th"/>
											<core:Item text="4" key="Fo" />
											<core:Item text="5" key="Fi"/>


										</m:items>
									</m:Select>

									<m:Label text="{i18n>riskRating}" />
									<m:Select id="riskRating" change="onDetectChange" selectedKey="{parts: ['plantBasicDetailsModel>/RiskRating'], formatter: '.formatter.formatRiskRating'}">
										<m:items>
											<core:Item text="" key="B"/>
											<core:Item text="Low" key="L"/>
											<core:Item text="Medium" key="M" />
											<core:Item text="High" key="H"/>
										</m:items>
									</m:Select>

									<m:Label text="{i18n>cas}" />
									<m:Select id="cas" change="onDetectChange" selectedKey="{parts: ['plantBasicDetailsModel>/Cas'], formatter: '.formatter.formatCas'}">
										<m:items>
											
											<core:Item text="Yes" key="Y"/>
											<core:Item text="No" key="N" />

										</m:items>
									</m:Select>

									<m:Label text="{i18n>majorAquisition}" />
									<m:TextArea rows="2" id="majorAquisition" value="{plantBasicDetailsModel>/MajorAcqisitions}" maxLength="50" />

									<m:Label text="{i18n>lifecycleStage}" />
									<!-- <m:Select id="lifecycleStage" change="onDetectChange" selectedKey="{parts: ['plantBasicDetailsModel>/LifecycleStage'], formatter: '.formatter.formatFCstage'}">
										<m:items>
											
											<core:Item text="Future Open" key="100"/>
											<core:Item text="Current Open" key="101"/>
											<core:Item text="Temp Closed" key="102" />
											<core:Item text="Perm Closed" key="103" />

										</m:items>
									</m:Select> -->
									<m:Input id="lifecycleStage" showValueHelp="true" valueHelpRequest="_onValueHelpLfSTatus" valueHelpOnly="true" value="{plantBasicDetailsModel>/LifecycleStage}" />

								</f:content>
							</f:SimpleForm>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

		</sections>
	</ObjectPageLayout>
</mvc:View>