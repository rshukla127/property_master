                         <Label required="true" text="{i18n>gateFriadayOpenHr}" />
                         <TimePicker id="gateFriOpen" valueFormat="HH:mm:ss" value="{plantBasicDetailsModel>/GateFridayOpenHr}" displayFormat="HH:mm:ss" support2400="true" maskMode="On" placeholder="Choose Time.." />
                         <Label required="true" text="{i18n>gateSaturdayOpenHr}" />
