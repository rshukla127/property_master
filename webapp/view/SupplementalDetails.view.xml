<mvc:View controllerName="com.public.storage.pao.controller.SupplementalDetails"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <ScrollContainer height="100%" width="100%" vertical="true" focusable="true">



        <VBox class="sapUiSmallMargin">
            <f:SimpleForm id="suppDetails" editable="true" layout="ResponsiveGridLayout" title="{i18n>propBUDetail}" labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false">
                <f:content>
                    <core:Title text="" visible="false"/>
                    <Label required="true" text="{i18n>propDeatures}" />
                    <Input value="{basicDetailsModel>/0/DirectPhoneNo}" />
                    <Label required="true" text="{i18n>drivingDirection}" />
                    <Input value="{basicDetailsModel>/0/FaxNumber}" />

                    <Label required="true" text="{i18n>specialNotes}" />
                    <Input value="{basicDetailsModel>/0/TollFreeNumber}" />

                    <Label text="{i18n>lockers}" />
                    <Select id="lock" selectedKey="{basicDetailsModel>/0/KioskProperty}">
                        <items>
                            <core:Item text="Yes" key="Y"/>
                            <core:Item text="No" key="N"/>

                        </items>
                    </Select>

                    <Label text="{i18n>largeTruckAccess}" />
                    <Select id="truck" selectedKey="{basicDetailsModel>/0/KioskProperty}">
                        <items>
                            <core:Item text="Yes" key="Y"/>
                            <core:Item text="No" key="N"/>

                        </items>
                    </Select>

                    <Label text="{i18n>furnitureDollies}" />
                    <Select id="furniture" selectedKey="{basicDetailsModel>/0/KioskProperty}">
                        <items>
                            <core:Item text="Yes" key="Y"/>
                            <core:Item text="No" key="N"/>

                        </items>
                    </Select>
                    <Label text="{i18n>basement}" />
                    <Select id="base" selectedKey="{basicDetailsModel>/0/KioskProperty}">
                        <items>
                            <core:Item text="Yes" key="Y"/>
                            <core:Item text="No" key="N"/>

                        </items>
                    </Select>

                    <Label text="{i18n>handtrucks}" />
                    <Select id="hand" selectedKey="{basicDetailsModel>/0/KioskProperty}">
                        <items>
                            <core:Item text="Yes" key="Y"/>
                            <core:Item text="No" key="N"/>

                        </items>
                    </Select>

                    <Label text="{i18n>carts}" />
                    <Select id="cart" selectedKey="{basicDetailsModel>/0/KioskProperty}">
                        <items>
                            <core:Item text="Yes" key="Y"/>
                            <core:Item text="No" key="N"/>

                        </items>
                    </Select>
                    <Label text="{i18n>yearBuild}" />
                    <Select id="year" selectedKey="{basicDetailsModel>/0/KioskProperty}">
                        <items>
                            <core:Item text="Yes" key="Y"/>
                            <core:Item text="No" key="N"/>

                        </items>
                    </Select>

                    <Label required="true" text="{i18n>capIndexRisk}" />
                    <Input value="{basicDetailsModel>/0/Network1IpAddress}" />

                    <Label text="{i18n>numberofBuilding}" />
                    <Input value="{basicDetailsModel>/0/TollFreeNumber}" />

                    <Label text="{i18n>constructionCode}" />
                    <Input showValueHelp="true" value="{basicDetailsModel>/0/Network1IpAddress}" />

                    <Label text="{i18n>noOfStories}" />
                    <Input value="{basicDetailsModel>/0/Network1IpAddress}" />

                    <Label text="{i18n>constructionCode2}" />
                    <Input showValueHelp="true" value="{basicDetailsModel>/0/Network1IpAddress}" />
                        <core:Title text="" visible="false"/>
                    <Label text="{i18n>lotSize}" />
                    <Input  value="{basicDetailsModel>/0/Network1IpAddress}" />

                    <Label text="{i18n>buildingClassification}" />
                    <Input showValueHelp="true" value="{basicDetailsModel>/0/Network1IpAddress}" />
                    
                    <Label text="{i18n>grossSquareFootage}" />
                    <Input value="{basicDetailsModel>/0/Network1IpAddress}" />
                    <Label text="{i18n>floodZone}" />
                    <Input showValueHelp="true" value="{basicDetailsModel>/0/Network1IpAddress}" />
                    <Label text="{i18n>tfmilesCoastWater}" />
                    <Input value="{basicDetailsModel>/0/Network1IpAddress}" />
                    <Label text="{i18n>sprinkler}" />
                        <Select id="sprink" selectedKey="{basicDetailsModel>/0/KioskProperty}">
                            <items>
                                <core:Item text="Yes" key="Y"/>
                                <core:Item text="No" key="N"/>
    
                            </items>
                        </Select>
                    <Label text="{i18n>sprinklerRemark}" />
                    <Input value="{basicDetailsModel>/0/Network1IpAddress}" />
                    <Label text="{i18n>fireAlarm}" />
                    <Input showValueHelp="true" value="{basicDetailsModel>/0/Network1IpAddress}" />
                    <Label text="{i18n>fireAlarmRemark}" />
                    <Input value="{basicDetailsModel>/0/Network1IpAddress}" />
                    <Label text="{i18n>bugerAlarm}" />
                    <Input showValueHelp="true" value="{basicDetailsModel>/0/Network1IpAddress}" />
                    <Label text="{i18n>bugerAlarmRemark}" />
                    <Input value="{basicDetailsModel>/0/Network1IpAddress}" />

                        <Label text="{i18n>parkingSpaces}" />
                            <Select id="park" selectedKey="{basicDetailsModel>/0/KioskProperty}">
                                <items>
                                    <core:Item text="Yes" key="Y"/>
                                    <core:Item text="No" key="N"/>
        
                                </items>
                            </Select>
        
                            <Label text="{i18n>elevator}" />
                            <Select id="elevat" selectedKey="{basicDetailsModel>/0/KioskProperty}">
                                <items>
                                    <core:Item text="Yes" key="Y"/>
                                    <core:Item text="No" key="N"/>
        
                                </items>
                            </Select>
        
                            <Label required="true" text="{i18n>apartment}" />
                            <Select id="apart" selectedKey="{basicDetailsModel>/0/KioskProperty}">
                                <items>
                                    <core:Item text="Yes" key="Y"/>
                                    <core:Item text="No" key="N"/>
        
                                </items>
                            </Select>
                            <Label text="{i18n>survillenceCamera}" />
                            <Select id="camera" selectedKey="{basicDetailsModel>/0/KioskProperty}">
                                <items>
                                    <core:Item text="Yes" key="Y"/>
                                    <core:Item text="No" key="N"/>
        
                                </items>
                            </Select>
                            <Label text="{i18n>survillanceCamRemarks}" />
                            <Input value="{basicDetailsModel>/0/Network1IpAddress}" />

                </f:content>
            </f:SimpleForm>
            <VBox alignContent="End" alignItems="End">
                <Button text="Save and Continue" type="Emphasized" enabled="true" press="onPressSaveBasicDetails"></Button>
            </VBox>
        </VBox>


    </ScrollContainer>
</mvc:View>