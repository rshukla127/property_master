<mvc:View controllerName="com.public.storage.pao.controller.SupplementalDetails"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <ScrollContainer height="100%" width="100%" vertical="true" focusable="true">



        <VBox class="sapUiSmallMargin">
            <f:SimpleForm id="suppDetails" editable="true" layout="ResponsiveGridLayout" title="{i18n>propBUDetail} (Plant - {plantsModel>/plant} &amp; Property - {plantBasicDetailsModel>/LegacyPropertyNumber} - {plantsModel>/address})" labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false">
                <f:content>
                    <core:Title text="" visible="false"/>
                    <Label required="true" text="{i18n>propDeatures}" />
                    <Input valueStateText="Value cannot be blank" maxLength="500" valueState="{/PropertyFeatures}" id="propFeature" value="{plantBasicDetailsModel>/PropertyFeatures}" />
                    <Label required="true" text="{i18n>drivingDirection}" />
                    <Input valueStateText="Value cannot be blank" maxLength="500" valueState="{/DrivingDirections}" id="driDirection" value="{plantBasicDetailsModel>/DrivingDirections}" />

                    <Label required="true" text="{i18n>specialNotes}" />
                    <Input valueStateText="Value cannot be blank" maxLength="500" valueState="{/SpecialNotes}" id="spNotes" value="{plantBasicDetailsModel>/SpecialNotes}" />

                    <Label text="{i18n>lockers}" />
                    <Select id="lock" selectedKey="{parts: ['plantBasicDetailsModel>/Lockers'], formatter: '.formatter.getSelectedKeyBlank'}">
                        <items>
                            <core:Item text="Yes" key="Y"/>
                            <core:Item text="No" key="N"/>
                            <core:Item text="" key="B"/>

                        </items>
                    </Select>

                    <Label text="{i18n>largeTruckAccess}" />
                    <Select id="truck" selectedKey="{parts: ['plantBasicDetailsModel>/LargeTruckAccess'], formatter: '.formatter.getSelectedKeyBlank'}">
                        <items>
                            <core:Item text="Yes" key="Y"/>
                            <core:Item text="No" key="N"/>
                            <core:Item text="" key="B"/>

                        </items>
                    </Select>

                    <Label text="{i18n>furnitureDollies}" />
                    <Select id="furniture" selectedKey="{parts: ['plantBasicDetailsModel>/FurnitureDollies'], formatter: '.formatter.getSelectedKeyBlank'}">
                        <items>
                            <core:Item text="Yes" key="Y"/>
                            <core:Item text="No" key="N"/>
                            <core:Item text="" key="B"/>

                        </items>
                    </Select>
                    <Label text="{i18n>basement}" />
                    <Select id="base" selectedKey="{parts: ['plantBasicDetailsModel>/Basement'], formatter: '.formatter.getSelectedKeyBlank'}">
                        <items>
                            <core:Item text="Yes" key="Y"/>
                            <core:Item text="No" key="N"/>
                            <core:Item text="" key="B"/>

                        </items>
                    </Select>

                    <Label text="{i18n>handtrucks}" />
                    <Select id="hand" selectedKey="{parts: ['plantBasicDetailsModel>/HandTrucks'], formatter: '.formatter.getSelectedKeyBlank'}">
                        <items>
                            <core:Item text="Yes" key="Y"/>
                            <core:Item text="No" key="N"/>
                            <core:Item text="" key="B"/>

                        </items>
                    </Select>

                    <Label text="{i18n>carts}" />
                    <Select id="cart" selectedKey="{parts: ['plantBasicDetailsModel>/Carts'], formatter: '.formatter.getSelectedKeyBlank'}">
                        <items>
                            <core:Item text="Yes" key="Y"/>
                            <core:Item text="No" key="N"/>
                            <core:Item text="" key="B"/>

                        </items>
                    </Select>
                    <Label text="{i18n>yearBuild}" />
                    <!-- <Select id="year" selectedKey="{plantBasicDetailsModel>/YearBuilt}">
                        <items>
                            <core:Item text="Yes" key="Y"/>
                            <core:Item text="No" key="N"/>
                            <core:Item text="" key="B"/>

                        </items>
                    </Select> -->
                    <Input id="year" showValueHelp="true" valueHelpOnly="true" valueHelpRequest="_onValueHelpYearBuild" value="{plantBasicDetailsModel>/YearBuilt}" />

                    <Label text="{i18n>capIndexRisk}" />
                    <Input id="capIndex" maxLength="4" value="{plantBasicDetailsModel>/CapIndexRisk}" />

                    <Label text="{i18n>numberofBuilding}" />
                    <Input id="noOfBuild" maxLength="3" value="{plantBasicDetailsModel>/NumberOfBuildings}" />

                    <Label text="{i18n>constructionCode}" />
                    <Input id="constCode" showValueHelp="true" app:fieldName="constCode" valueHelpOnly="true" valueHelpRequest="_onValueHelpConstructionCode" value="{plantBasicDetailsModel>/ConstructionCode}" />

                    <Label text="{i18n>noOfStories}" />
                    <Input id="noOfStories" maxLength="3" value="{plantBasicDetailsModel>/NumberOfStories}" />

                    <Label text="{i18n>constructionCode2}" />
                    <Input id="constCode2" showValueHelp="true" app:fieldName="constCode2" valueHelpOnly="true" valueHelpRequest="_onValueHelpConstructionCode" value="{plantBasicDetailsModel>/ConstructionCode2}" />
                    <core:Title text="" visible="false"/>
                    <Label text="{i18n>lotSize}" />
                    <Input id="lotSize" maxLength="9" value="{plantBasicDetailsModel>/LotSize}" />

                    <Label text="{i18n>buildingClassification}" />
                    <Input id="buildClass" showValueHelp="true" value="{plantBasicDetailsModel>/BuildingClassification}" />

                    <Label text="{i18n>grossSquareFootage}" />
                    <Input id="grossSQFoot" maxLength="7" value="{plantBasicDetailsModel>/GrossSquareFootage}" />
                    <Label text="{i18n>floodZone}" />
                    <!-- <Input id="floodzone" showValueHelp="true" value="{plantBasicDetailsModel>/FloodZone}" /> -->
                        <Select id="floodzone" selectedKey="{plantBasicDetailsModel>/FloodZone}">
                            <items>
                                <core:Item text="Yes" key="Y"/>
                                <core:Item text="No" key="N"/>
                            </items>
                        </Select>
                    <Label text="{i18n>tfmilesCoastWater}" />
                    <Input id="tfmilesCoastWater" maxLength="10" value="{plantBasicDetailsModel>/MilesOfCostalWater25}" />
                    <Label text="{i18n>sprinkler}" />
                    <Select id="sprink" selectedKey="{plantBasicDetailsModel>/Sprinkler}">
                        <items>
                            <core:Item text="Yes" key="Y"/>
                            <core:Item text="No" key="N"/>
                        </items>
                    </Select>
                    <Label text="{i18n>sprinklerRemark}" />
                    <Input id="sprinkRem" maxLength="30" value="{plantBasicDetailsModel>/SprinklerRemark}" />
                    <Label text="{i18n>fireAlarm}" />
                        <Select id="fireAlarm" selectedKey="{plantBasicDetailsModel>/FireAlarm}">
                            <items>
                                <core:Item text="Yes" key="Y"/>
                                <core:Item text="No" key="N"/>
    
                            </items>
                        </Select>
                   
                    <Label text="{i18n>fireAlarmRemark}" />
                    <Input id="fireAlarmRemark" maxLength="30" value="{plantBasicDetailsModel>/FireAlarmRemarks}" />
                        
                    <Label text="{i18n>bugerAlarm}" />
                        <Select id="bugalarm" selectedKey="{plantBasicDetailsModel>/BuglerAlarm}">
                            <items>
                                <core:Item text="Yes" key="Y"/>
                                <core:Item text="No" key="N"/>
    
                            </items>
                        </Select>
                    <Label text="{i18n>bugerAlarmRemark}" />
                    <Input id="bugAlarmRemark" maxLength="30" value="{plantBasicDetailsModel>/BuglerAlarmRemarks}" />

                    <Label text="{i18n>parkingSpaces}" />
                    <Select id="park" selectedKey="{plantBasicDetailsModel>/ParkingSpaces}">
                        <items>
                            <core:Item text="Yes" key="Y"/>
                            <core:Item text="No" key="N"/>

                        </items>
                    </Select>

                    <Label text="{i18n>elevator}" />
                    <Select id="elevater" selectedKey="{plantBasicDetailsModel>/Elevators}">
                        <items>
                            <core:Item text="Yes" key="Y"/>
                            <core:Item text="No" key="N"/>

                        </items>
                    </Select>

                    <Label required="true" text="{i18n>apartment}" />
                    <Select id="apart" valueStateText="Value cannot be blank" valueState="{/Apartments}" selectedKey="{plantBasicDetailsModel>/Apartments}">
                        <items>
                            <core:Item text="Yes" key="Y"/>
                            <core:Item text="No" key="N"/>

                        </items>
                    </Select>
                    <Label text="{i18n>survillenceCamera}" />
                    <Select id="camera" selectedKey="{plantBasicDetailsModel>/SurvellianceCamera}">
                        <items>
                            <core:Item text="Yes" key="Y"/>
                            <core:Item text="No" key="N"/>

                        </items>
                    </Select>
                    <Label text="{i18n>survillanceCamRemarks}" />
                    <Input id="surCamRemarks" maxLength="30" value="{plantBasicDetailsModel>/SurvellianceCameraRemarks}" />

                </f:content>
            </f:SimpleForm>
            <VBox alignContent="End" alignItems="End">
                <Button text="Save and Continue" type="Emphasized" enabled="true" press="onPressSaveSuppDetails"></Button>
            </VBox>
        </VBox>


    </ScrollContainer>
</mvc:View>