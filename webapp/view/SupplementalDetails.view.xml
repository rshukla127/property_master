<mvc:View xmlns:mvc="sap.ui.core.mvc"
controllerName="com.public.storage.pao.controller.SupplementalDetails"
	xmlns="sap.uxap"
	xmlns:m="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:f="sap.ui.layout.form" height="100%">

	<ObjectPageLayout id="ObjectPageLayout" upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<expandedHeading>
					<m:Title text="Property Supplemental Details" wrapping="true" />
				</expandedHeading>

				<snappedHeading>
					<m:HBox>
						<m:VBox>
							<m:Title text="Property Supplemental Details" wrapping="true"/>
							<m:Label text="Fill your supplemental details"/>
						</m:VBox>
					</m:HBox>
				</snappedHeading>

				<expandedContent>
					<m:Label text="Fill your supplemental details"/>
				</expandedContent>

				<snappedTitleOnMobile>
					<m:Title text="Property Supplemental Details"/>
				</snappedTitleOnMobile>

				<actions>
					<m:Button text="Save and Continue" enabled="true" icon="sap-icon://save" type="Emphasized" press="onPressSaveSuppDetails"></m:Button>
				</actions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>

		<headerContent>
			<m:FlexBox wrap="Wrap" fitContainer="true">
				<m:Avatar src="sap-icon://supplier" class="sapUiMediumMarginEnd sapUiSmallMarginBottom" displayShape="Circle" initials="SD" displaySize="L"/>

				<m:VBox class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
					<m:Title level="H4" titleStyle="H4" text="Plant" class="sapUiTinyMarginBottom">
					</m:Title>
					<m:Label text="{plantsModel>/plant}"/>
				</m:VBox>

				<m:VBox class="sapUiSmallMarginBottom sapUiLargeMarginEnd">
					<m:Title level="H4" titleStyle="H4" text="Property" class="sapUiTinyMarginBottom" />
					<m:Label text="{plantsModel>/property}"/>
				</m:VBox>

				<m:VBox class="sapUiSmallMarginBottom">
					<m:Title level="H4" titleStyle="H4" text="Address" class="sapUiTinyMarginBottom" />
					<m:Label wrapping="true" text="{plantsModel>/address}"/>
				</m:VBox>
			</m:FlexBox>
		</headerContent>

		<sections>

			<ObjectPageSection titleUppercase="false" id="personalSection" title="Property Supplemental Details">
				<subSections>
					<ObjectPageSubSection id="personalSectionSS1"  titleUppercase="false">
						<blocks>
                            <f:SimpleForm id="suppDetails" editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false">
                                <f:content>
                                    <core:Title text="" visible="false"/>
                                    
                
                                    <m:Label text="{i18n>lockers}" />
                                    <m:Select change="onDetectChange" id="lock" selectedKey="{parts: ['plantBasicDetailsModel>/Lockers'], formatter: '.formatter.getSelectedKeyBlank'}">
                                        <m:items>
                                            <core:Item text="Yes" key="Y"/>
                                            <core:Item text="No" key="N"/>
                                            <core:Item text="" key="B"/>
                
                                        </m:items>
                                    </m:Select>
                
                                    <m:Label text="{i18n>largeTruckAccess}" />
                                    <m:Select change="onDetectChange" id="truck" selectedKey="{parts: ['plantBasicDetailsModel>/LargeTruckAccess'], formatter: '.formatter.getSelectedKeyBlank'}">
                                        <m:items>
                                            <core:Item text="Yes" key="Y"/>
                                            <core:Item text="No" key="N"/>
                                            <core:Item text="" key="B"/>
                
                                        </m:items>
                                    </m:Select>
                
                                    <m:Label text="{i18n>furnitureDollies}" />
                                    <m:Select change="onDetectChange" id="furniture" selectedKey="{parts: ['plantBasicDetailsModel>/FurnitureDollies'], formatter: '.formatter.getSelectedKeyBlank'}">
                                        <m:items>
                                            <core:Item text="Yes" key="Y"/>
                                            <core:Item text="No" key="N"/>
                                            <core:Item text="" key="B"/>
                
                                        </m:items>
                                    </m:Select>
                                    <m:Label text="{i18n>basement}" />
                                    <m:Select change="onDetectChange" id="base" selectedKey="{parts: ['plantBasicDetailsModel>/Basement'], formatter: '.formatter.getSelectedKeyBlank'}">
                                        <m:items>
                                            <core:Item text="Yes" key="Y"/>
                                            <core:Item text="No" key="N"/>
                                            <core:Item text="" key="B"/>
                
                                        </m:items>
                                    </m:Select>
                
                                    <m:Label text="{i18n>handtrucks}" />
                                    <m:Select change="onDetectChange" id="hand" selectedKey="{parts: ['plantBasicDetailsModel>/HandTrucks'], formatter: '.formatter.getSelectedKeyBlank'}">
                                        <m:items>
                                            <core:Item text="Yes" key="Y"/>
                                            <core:Item text="No" key="N"/>
                                            <core:Item text="" key="B"/>
                
                                        </m:items>
                                    </m:Select>
                
                                    <m:Label text="{i18n>carts}" />
                                    <m:Select change="onDetectChange" id="cart" selectedKey="{parts: ['plantBasicDetailsModel>/Carts'], formatter: '.formatter.getSelectedKeyBlank'}">
                                        <m:items>
                                            <core:Item text="Yes" key="Y"/>
                                            <core:Item text="No" key="N"/>
                                            <core:Item text="" key="B"/>
                
                                        </m:items>
                                    </m:Select>
                                    <m:Label text="{i18n>yearBuild}" />
                                    <!-- <m:Select id="year" selectedKey="{plantBasicDetailsModel>/YearBuilt}">
                                        <m:items>
                                            <core:Item text="Yes" key="Y"/>
                                            <core:Item text="No" key="N"/>
                                            <core:Item text="" key="B"/>
                
                                        </m:items>
                                    </m:Select> -->
                                    <m:Input change="onDetectChange" id="year" showValueHelp="true" valueHelpOnly="true" valueHelpRequest="_onValueHelpYearBuild" value="{plantBasicDetailsModel>/YearBuilt}" />
                
                                    <m:Label text="{i18n>capIndexRisk}" />
                                    <m:Input change="onDetectChange" id="capIndex" maxLength="4" value="{plantBasicDetailsModel>/CapIndexRisk}" />
                
                                    <m:Label text="{i18n>numberofBuilding}" />
                                    <m:Input change="onDetectChange" id="noOfBuild" maxLength="3" value="{plantBasicDetailsModel>/NumberOfBuildings}" />
                
                                    <m:Label text="{i18n>constructionCode}" />
                                    <m:Input change="onDetectChange" id="constCode" showValueHelp="true" app:fieldName="constCode" valueHelpOnly="true" valueHelpRequest="_onValueHelpConstructionCode" value="{plantBasicDetailsModel>/ConstructionCode}" />
                
                                    <m:Label text="{i18n>noOfStories}" />
                                    <m:Input change="onDetectChange" id="noOfStories" maxLength="3" value="{plantBasicDetailsModel>/NumberOfStories}" />
                
                                    <m:Label text="{i18n>constructionCode2}" />
                                    <m:Input change="onDetectChange" id="constCode2" showValueHelp="true" app:fieldName="constCode2" valueHelpOnly="true" valueHelpRequest="_onValueHelpConstructionCode" value="{plantBasicDetailsModel>/ConstructionCode2}" />
                                    
                                    <m:Label text="{i18n>officeCount}" />
                                    <m:Input change="onDetectChange" id="officeCount" type="Number" maxLength="2" value="{plantBasicDetailsModel>/OfficeCount}" />

                                    <m:Label text="{i18n>survillenceCamera}" />
                                    <m:Select change="onDetectChange" id="camera" selectedKey="{plantBasicDetailsModel>/SurvellianceCamera}">
                                        <m:items>
                                            <core:Item text="Yes" key="Y"/>
                                            <core:Item text="No" key="N"/>
                
                                        </m:items>
                                    </m:Select>
                                    <m:Label text="{i18n>survillanceCamRemarks}" />
                                    <m:Input change="onDetectChange" id="surCamRemarks" maxLength="30" value="{plantBasicDetailsModel>/SurvellianceCameraRemarks}" />
                                    
                                    <m:Label text="{i18n>restRoomCount}" />
                                    <m:Input change="onDetectChange" id="restRoomCount" type="Number" maxLength="2" value="{plantBasicDetailsModel>/RestroomCount}" />
                                    
                                    <core:Title text="" visible="false"/>
                                    <m:Label text="{i18n>lotSize}" />
                                    <m:Input change="onDetectChange" id="lotSize" maxLength="9" value="{plantBasicDetailsModel>/LotSize}" />
                
                                    <m:Label text="{i18n>buildingClassification}" />
                                    <m:Input change="onDetectChange" id="buildClass" showValueHelp="false" value="{plantBasicDetailsModel>/BuildingClassification}" />
                
                                    <m:Label text="{i18n>grossSquareFootage}" />
                                    <m:Input change="onDetectChange" id="grossSQFoot" maxLength="7" value="{plantBasicDetailsModel>/GrossSquareFootage}" />
                                    <m:Label text="{i18n>floodZone}" />
                                    <!-- <m:Input id="floodzone" showValueHelp="true" value="{plantBasicDetailsModel>/FloodZone}" /> -->
                                        <m:Select change="onDetectChange" id="floodzone" selectedKey="{plantBasicDetailsModel>/FloodZone}">
                                            <m:items>
                                                <core:Item text="Yes" key="Y"/>
                                                <core:Item text="No" key="N"/>
                                            </m:items>
                                        </m:Select>
                                        <m:Label text="Flood insurance Effective date" />
                                            <m:DatePicker change="onDetectChange" id="floodeffdate" value="{ 
                            parts: ['plantBasicDetailsModel>/FloodInsEffDate'],
                            type: 'sap.ui.model.type.Date', formatter: '.formatter.formatDateTime'
                          }" valueFormat="yyyy-MM-dd" placeholder="Choose Date.."/>
                                    <m:Label text="{i18n>tfmilesCoastWater}" />
                                    <m:Input change="onDetectChange" id="tfmilesCoastWater" maxLength="10" value="{plantBasicDetailsModel>/MilesOfCostalWater25}" />
                                    <m:Label text="{i18n>sprinkler}" />
                                    <m:Select change="onDetectChange" id="sprink" selectedKey="{plantBasicDetailsModel>/Sprinkler}">
                                        <m:items>
                                            <core:Item text="Yes" key="Y"/>
                                            <core:Item text="No" key="N"/>
                                        </m:items>
                                    </m:Select>
                                    <m:Label text="{i18n>sprinklerRemark}" />
                                    <m:Input change="onDetectChange" id="sprinkRem" maxLength="30" value="{plantBasicDetailsModel>/SprinklerRemark}" />
                                    <m:Label text="{i18n>fireAlarm}" />
                                        <m:Select change="onDetectChange" id="fireAlarm" selectedKey="{plantBasicDetailsModel>/FireAlarm}">
                                            <m:items>
                                                <core:Item text="Yes" key="Y"/>
                                                <core:Item text="No" key="N"/>
                    
                                            </m:items>
                                        </m:Select>
                                   
                                    <m:Label text="{i18n>fireAlarmRemark}" />
                                    <m:Input change="onDetectChange" id="fireAlarmRemark" maxLength="30" value="{plantBasicDetailsModel>/FireAlarmRemarks}" />
                                        
                                    <m:Label text="{i18n>bugerAlarm}" />
                                        <m:Select change="onDetectChange" id="bugalarm" selectedKey="{plantBasicDetailsModel>/BuglerAlarm}">
                                            <m:items>
                                                <core:Item text="Yes" key="Y"/>
                                                <core:Item text="No" key="N"/>
                    
                                            </m:items>
                                        </m:Select>
                                    <m:Label text="{i18n>bugerAlarmRemark}" />
                                    <m:Input change="onDetectChange" id="bugAlarmRemark" maxLength="30" value="{plantBasicDetailsModel>/BuglerAlarmRemarks}" />
                
                                    <m:Label text="{i18n>parkingSpaces}" />
                                    <m:Select change="onDetectChange" id="park" selectedKey="{plantBasicDetailsModel>/ParkingSpaces}">
                                        <m:items>
                                            <core:Item text="Yes" key="Y"/>
                                            <core:Item text="No" key="N"/>
                
                                        </m:items>
                                    </m:Select>
                
                                    <m:Label text="{i18n>elevator}" />
                                    <m:Select change="onDetectChange" id="elevater" selectedKey="{plantBasicDetailsModel>/Elevators}">
                                        <m:items>
                                            <core:Item text="Yes" key="Y"/>
                                            <core:Item text="No" key="N"/>
                
                                        </m:items>
                                    </m:Select>
                
                                    <m:Label required="true" text="{i18n>apartment}" />
                                    <m:Select change="onDetectChange" id="apart" valueStateText="Value cannot be blank" valueState="{/Apartments}" selectedKey="{plantBasicDetailsModel>/Apartments}">
                                        <m:items>
                                            <core:Item text="Yes" key="Y"/>
                                            <core:Item text="No" key="N"/>
                
                                        </m:items>
                                    </m:Select>
                                    
                                </f:content>
                            </f:SimpleForm>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

		</sections>
	</ObjectPageLayout>
</mvc:View>