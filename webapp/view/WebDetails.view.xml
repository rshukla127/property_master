<mvc:View controllerName="com.public.storage.pao.controller.WebDetails"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <ScrollContainer height="100%" width="100%" vertical="true" focusable="true">



        <VBox class="sapUiSmallMargin">
            <f:SimpleForm id="basicDetails" editable="true" layout="ResponsiveGridLayout" title="{i18n>webDetails} (Plant - {plantsModel>/plant} &amp; Property - {plantBasicDetailsModel>/LegacyPropertyNumber} - {plantsModel>/address})" labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false">
                <f:content>
                  
                    <core:Title text="" visible="false"/>
                    <Label required="true" text="{i18n>propLat}" />
                    <Input id="propLat" maxLength="9" valueStateText="Value cannot be blank" valueState="{/PropertyLatitude}" value="{plantBasicDetailsModel>/PropertyLatitude}" />
                    <Label required="true" text="{i18n>propLong}" />
                    <Input id="propLong" maxLength="9" valueStateText="Value cannot be blank" valueState="{/PropertyLongitude}" value="{plantBasicDetailsModel>/PropertyLongitude}" />

                    <Label required="true" text="{i18n>propAdminFee}" />
                    <Input id="propAdmin" maxLength="16" valueStateText="Value cannot be blank" valueState="{/PropertyAdminFee}" type="Number" 
                    value="{parts: ['plantBasicDetailsModel>/PropertyAdminFee'], formatter: '.formatter.removeLeadingZeros'}"/>

                    <Label required="true" text="{i18n>adminFeeEff}" />
                    <DatePicker id="effDate" valueStateText="Value cannot be blank" valueState="{/AdminFeeEffectiveDate}" placeholder="Choose Date..." value="{ 
                        path: 'plantBasicDetailsModel>/AdminFeeEffectiveDate',
                        type: 'sap.ui.model.type.Date'  
                      }" valueFormat="yyyy-MM-dd" />

                    <Label text="{i18n>propChurn}" />
                    <Input id="propChurn" showValueHelp="true" valueHelpOnly="true" valueHelpRequest="_onValueHelpChurnStatus" value="{plantBasicDetailsModel>/PropertyChurnStatus}" />

                    <Label text="{i18n>climateControl}" />
                        <Input id="climControl" showValueHelp="true" valueHelpOnly="true" valueHelpRequest="_onValueHelpClimateControl" value="{plantBasicDetailsModel>/ClimateControl}" />
                    <!-- <Select id="climControl" selectedKey="{parts: ['plantBasicDetailsModel>/ClimateControl'], formatter: '.formatter.getSelectedKeyBlank'}">
                        <items>
                            <core:Item text="Yes" key="Y"/>
                            <core:Item text="No" key="N"/>
                            <core:Item text="" key="B"/>

                        </items>
                    </Select> -->

                    <Label required="true" text="{i18n>propWebReservation}" />
                    <Select id="propWeb" valueStateText="Value cannot be blank" selectedKey="{parts: ['plantBasicDetailsModel>/PropertyWebsiteReservations'], formatter: '.formatter.getSelectedKeyBlank'}"
                    valueState="{/PropertyWebsiteReservations}">
                        <items>
                            <core:Item text="Yes" key="Y"/>
                            <core:Item text="No" key="N"/>
                            <core:Item text="" key="B"/>

                        </items>
                    </Select>

                    <Label required="true" text="{i18n>webEnabledDate}" />
                    <DatePicker id="webenabled" valueStateText="Value cannot be blank" valueState="{/WebsiteEnabledDate}" placeholder="Choose Date..."
                    value="{ 
                        path: 'plantBasicDetailsModel>/WebsiteEnabledDate',
                        type: 'sap.ui.model.type.Date'  
                      }" valueFormat="yyyy-MM-dd"/>

                    <Label required="true" text="{i18n>propCallCenter}" />
                    <Select id="propCall" valueStateText="Value cannot be blank" selectedKey="{parts: ['plantBasicDetailsModel>/PropertyCallCenterReservati'], formatter: '.formatter.getSelectedKeyBlank'}"
                    valueState="{/PropertyCallCenterReservati}">
                        <items>
                            <core:Item text="Yes" key="Y"/>
                            <core:Item text="No" key="N"/>
                            <core:Item text="" key="B"/>

                        </items>
                    </Select>
                    <core:Title text="" />
                    <Label required="true" text="{i18n>callCenterEnabled}" />
                    <DatePicker id="callCenter" valueStateText="Value cannot be blank" valueState="{/CallCenterEnabledDate}" placeholder="Choose Date..." 
                    value="{ 
                        path: 'plantBasicDetailsModel>/CallCenterEnabledDate',
                        type: 'sap.ui.model.type.Date'  
                      }" valueFormat="yyyy-MM-dd"/>

                    <Label required="true" text="{i18n>propNFSFee}" />
                    <Input id="propNFS" type="Number" valueStateText="Value cannot be blank" valueState="{/PropertyNfsFee}"
                     value="{parts: ['plantBasicDetailsModel>/PropertyNfsFee'], formatter: '.formatter.removeLeadingZeros'}"/>

                    <Label required="true" text="{i18n>maxResDays}" />
                    <Input id="maxRes" valueStateText="Value cannot be blank" type="Number" maxLength="3" valueState="{/MaxReservationDays}" 
                    value="{parts: ['plantBasicDetailsModel>/MaxReservationDays'], formatter: '.formatter.removeLeadingZeros'}" />
                    <Label text="{i18n>nsfFeeEff}" />
                    <DatePicker id="nsfFeeEff" placeholder="Choose Date..." 
                    value="{ 
                        path: 'plantBasicDetailsModel>/NsfFeeEffectiveDate',
                        type: 'sap.ui.model.type.Date'  
                      }" valueFormat="yyyy-MM-dd"/>

                    <Label required="true" text="{i18n>propNFS}" />
                    <Input id="propNFSACH" valueStateText="Value cannot be blank" type="Number" valueState="{/PropertyNfsAchFee}" 
                    value="{parts: ['plantBasicDetailsModel>/PropertyNfsAchFee'], formatter: '.formatter.removeLeadingZeros'}"/>

                    <Label text="{i18n>nfsachfeeEffective}" />
                    <DatePicker id="nfsAshfeeeff" placeholder="Choose Date..." 
                    value="{ 
                        path: 'plantBasicDetailsModel>/NfsAchFeeEffectiveDate',
                        type: 'sap.ui.model.type.Date'  
                      }" valueFormat="yyyy-MM-dd"/>
                    <Label required="true" text="{i18n>propInsuranceFrozen}" />
                    <Select id="propFrozen" valueStateText="Value cannot be blank" valueState="{/PropertyInsuranceFrozen}" selectedKey="{plantBasicDetailsModel>/PropertyInsuranceFrozen}">
                        <items>
                            <core:Item text="Yes" key="Y"/>
                            <core:Item text="No" key="N"/>

                        </items>
                    </Select>

                    <Label required="true" text="{i18n>propInsCancel}" />
                    <Input id="propIns" type="Number" maxLength="3" valueStateText="Value cannot be blank" valueState="{/PropertyInsuranceCancelDay}" 
                    value="{parts: ['plantBasicDetailsModel>/PropertyInsuranceCancelDay'], formatter: '.formatter.removeLeadingZeros'}}"/>

                    <Label required="true" text="{i18n>preResDay}" />
                    <Input id="propResDay" type="Number" maxLength="3" valueStateText="Value cannot be blank" valueState="{/PreReservationDays}"
                     value="{parts: ['plantBasicDetailsModel>/PreReservationDays'], formatter: '.formatter.removeLeadingZeros'}" />
                </f:content>
            </f:SimpleForm>
            <VBox alignContent="End" alignItems="End">
                <Button text="Save and Continue" enabled="true" type="Emphasized" press="onPressSaveWebDetails"></Button>
            </VBox>
        </VBox>


    </ScrollContainer>
</mvc:View>