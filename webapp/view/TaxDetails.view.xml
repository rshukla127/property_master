<mvc:View controllerName="com.public.storage.pao.controller.TaxDetails"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <ScrollContainer height="100%" width="100%" vertical="true" focusable="true">
        <VBox class="sapUiSmallMargin">
            <f:SimpleForm id="basicDetails" editable="true" layout="ResponsiveGridLayout" title="{i18n>taxDetails} (Plant - {plantsModel>/plant} &amp; Property - {plantBasicDetailsModel>/LegacyPropertyNumber} - {plantsModel>/address})" labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false">
                <f:content>
                    <core:Title text="" visible="false"/>
                    
                    <Label required="true" text="{i18n>taxOwner}" />
                    <Input id="taxOwner" valueStateText="Value cannot be blank" valueState="{/TaxOwner}" valueHelpRequest="_onValueHelpTaxOwner" valueHelpOnly="true"  showValueHelp="true" value="{plantBasicDetailsModel>/TaxOwner}" />

                    <Label required="true" text="{i18n>taxOwnerFein}" />
                    <Input id="taxOwnerFein" valueStateText="Value cannot be blank" valueState="{/TaxOwnerFein}" valueHelpRequest="_onValueHelpTaxOwnerFein" valueHelpOnly="true"  showValueHelp="true" value="{plantBasicDetailsModel>/TaxOwnerFein}" />

                    <Label required="true" text="{i18n>legalOwner}" />
                    <Input id="legalOwner" valueStateText="Value cannot be blank" valueState="{/LegalOwner}" valueHelpRequest="_onValueHelpLegalOwner" valueHelpOnly="true"  showValueHelp="true" value="{plantBasicDetailsModel>/LegalOwner}" />
                    <Label required="true" text="{i18n>legalOwnerDein}" />
                    <Input id="legalOwnerFein" valueStateText="Value cannot be blank" valueState="{/LegalOwnerFein}" valueHelpRequest="_onValueHelpLegalOwnerFein" valueHelpOnly="true"  showValueHelp="true" value="{plantBasicDetailsModel>/LegalOwnerFein}" />

                    <Label required="true" text="{i18n>ownerOfRec}" />
                    <Input id="ownerRecord" valueStateText="Value cannot be blank" valueState="{/OwnerOfRecord}" valueHelpRequest="_onValueHelOwnerRecord" valueHelpOnly="true"  showValueHelp="true" value="{plantBasicDetailsModel>/OwnerOfRecord}" />

                    <!-- <Label required="true" text="{i18n>taxFillingEntity}" />
                    <Input id="taxFiling" valueStateText="Value cannot be blank" valueState="{/TaxFilingEntity}" valueHelpRequest="_onValueHelpTaxFillingEntity" valueHelpOnly="true"  showValueHelp="true" value="{plantBasicDetailsModel>/TaxFilingEntity}" /> -->
                   
                    <Label required="true" text="Solar Entity" />
                    <TextArea id="taxFiling" valueStateText="Value cannot be blank" valueState="{/TaxFilingEntity}" valueHelpRequest="_onValueHelpTaxFillingEntity"  value="{plantBasicDetailsModel>/TaxFilingEntity}" />

                </f:content>
            </f:SimpleForm>
            <VBox alignContent="End" alignItems="End">
                <Button text="Save and Continue" enabled="true" type="Emphasized" press="onPressSaveTaxDetails"></Button>
            </VBox>
        </VBox>


    </ScrollContainer>
</mvc:View>