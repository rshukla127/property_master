<mvc:View controllerName="com.public.storage.pao.controller.WorkingHours"
     xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
     xmlns:l="sap.ui.layout"
     xmlns:f="sap.ui.layout.form"
     xmlns="sap.m"
     xmlns:core="sap.ui.core">
     <ScrollContainer height="100%" width="100%" vertical="true" focusable="true">



          <VBox class="sapUiSmallMargin">
               <f:SimpleForm id="workingHours" editable="true" layout="ResponsiveGridLayout" title="{i18n>workingHours} (Plant - {plantsModel>/plant} &amp; Property - {plantBasicDetailsModel>/LegacyPropertyNumber} - {plantsModel>/address})" labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false">
                    <f:content>
                         <core:Title text="" visible="false"/>
                         <Label required="true" text="{i18n>officeSundayOpenHr}" />
                         <TimePicker id="sunOpen"
                              value="{parts: ['plantBasicDetailsModel>/OfficeSundayOpenHr'], formatter: '.formatter.formatTime'}"
                              valueFormat="HH:mm:ss" displayFormat="HH:mm:ss" support2400="true"  placeholder="Choose Time.." />

                         <Label required="true" text="{i18n>officeMondayOpenHr}" />
                         <TimePicker id="monOpen" 
                         value="{parts: ['plantBasicDetailsModel>/OfficeMondayOpenHr'], formatter: '.formatter.formatTime'}"
                              valueFormat="HH:mm:ss" displayFormat="HH:mm:ss" support2400="true"  placeholder="Choose Time.." />

                         <Label required="true" text="{i18n>officeTuesdayOpenHr}" />
                         <TimePicker id="tueOpen"
                         value="{parts: ['plantBasicDetailsModel>/OfficeTuesdayOpenHr'], formatter: '.formatter.formatTime'}" valueFormat="HH:mm:ss" displayFormat="HH:mm:ss" support2400="true" maskMode="On" placeholder="Choose Time.." />

                         <Label required="true" text="{i18n>officeWednesdayOpenHr}" />
                         <TimePicker id="wedOpen" value="{parts: ['plantBasicDetailsModel>/OfficeWednessdayOpenHr'], formatter: '.formatter.formatTime'}"
                              
                               valueFormat="HH:mm:ss" displayFormat="HH:mm:ss" support2400="true" maskMode="On" placeholder="Choose Time.." />


                         <Label required="true" text="{i18n>officeThursdayOpenHr}" />
                         <TimePicker id="thuOpen" value="{parts: ['plantBasicDetailsModel>/OfficeThursdayOpenHr'], formatter: '.formatter.formatTime'}"
                                 valueFormat="HH:mm:ss" displayFormat="HH:mm:ss" support2400="true" maskMode="On" placeholder="Choose Time.." />

                         <Label required="true" text="{i18n>officeFriadayOpenHr}" />
                         <TimePicker id="friOpen" value="{parts: ['plantBasicDetailsModel>/OfficeFridayOpenHr'], formatter: '.formatter.formatTime'}"
                           valueFormat="HH:mm:ss" displayFormat="HH:mm:ss" support2400="true" maskMode="On" placeholder="Choose Time.." />
                         <Label required="true" text="{i18n>officeSaturdayOpenHr}" />
                         <TimePicker id="satOpen" value="{parts: ['plantBasicDetailsModel>/OfficeSaturdayOpenHr'], formatter: '.formatter.formatTime'}"
                              valueFormat="HH:mm:ss" displayFormat="HH:mm:ss" support2400="true" maskMode="On" placeholder="Choose Time.." />
                         <Label required="true" text="Day Light Saving Applicable" />
					<Select id="daylight" valueStateText="Value cannot be blank" selectedKey="{plantBasicDetailsModel>/DayLightSavingsApplicable}">
						<items>
							<core:Item text="Yes" key="Y"/>
							<core:Item text="No" key="N"/>

						</items>
					</Select>

                         <core:Title text="" />

                         <Label required="true" text="{i18n>officeSundayClosedHr}" />
                         <TimePicker id="sunClose" value="{parts: ['plantBasicDetailsModel>/OfficeSundayCloseHr'], formatter: '.formatter.formatTimeSatandSunClose'}"
                          valueFormat="HH:mm:ss" displayFormat="HH:mm:ss" support2400="true" maskMode="On" placeholder="Choose Time.." />
                         <Label required="true" text="{i18n>officeMondayClosedHr}" />
                         <TimePicker id="monClose" value="{parts: ['plantBasicDetailsModel>/OfficeMondayCloseHr'], formatter: '.formatter.formatTimeOthersClose'}"
                          valueFormat="HH:mm:ss" displayFormat="HH:mm:ss" support2400="true" maskMode="On" placeholder="Choose Time.." />

                         <Label required="true" text="{i18n>officeTuesdayClosedHr}" />
                         <TimePicker id="tueClose" value="{parts: ['plantBasicDetailsModel>/OfficeTuesdayCloseHr'], formatter: '.formatter.formatTimeOthersClose'}"
                         valueFormat="HH:mm:ss" displayFormat="HH:mm:ss" support2400="true" maskMode="On" placeholder="Choose Time.." />
                         <Label required="true" text="{i18n>officeWednesdayClosedHr}" />
                         <TimePicker id="wedClose" value="{parts: ['plantBasicDetailsModel>/OfficeWednessdayCloseHr'], formatter: '.formatter.formatTimeOthersClose'}"
                          valueFormat="HH:mm:ss" displayFormat="HH:mm:ss" support2400="true" maskMode="On" placeholder="Choose Time.." />

                         <Label required="true" text="{i18n>officeThursdayClosedHr}" />
                         <TimePicker id="thuClose" value="{parts: ['plantBasicDetailsModel>/OfficeThursdayCloseHr'], formatter: '.formatter.formatTimeOthersClose'}"
                          valueFormat="HH:mm:ss" displayFormat="HH:mm:ss" support2400="true" maskMode="On" placeholder="Choose Time.." />
                         <Label required="true" text="{i18n>officeFriadayClosedHr}" />
                         <TimePicker id="friClose" value="{parts: ['plantBasicDetailsModel>/OfficeFridayCloseHr'], formatter: '.formatter.formatTimeOthersClose'}"
                         valueFormat="HH:mm:ss" displayFormat="HH:mm:ss" support2400="true" maskMode="On" placeholder="Choose Time.." />
                         <Label required="true" text="{i18n>officeSaturdayClosedHr}" />
                         <TimePicker id="satClose" value="{parts: ['plantBasicDetailsModel>/OfficeSaturdayCloseHr'], formatter: '.formatter.formatTimeSatandSunClose'}"
                         valueFormat="HH:mm:ss" displayFormat="HH:mm:ss" support2400="true" maskMode="On" placeholder="Choose Time.." />

                    </f:content>
               </f:SimpleForm>

               <VBox alignContent="End" alignItems="End">
                    <Button text="Save and Continue" enabled="true" type="Emphasized" press="onPressSaveWorkingHours"></Button>
               </VBox>
          </VBox>
     </ScrollContainer>
</mvc:View>