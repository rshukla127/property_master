                    <Label text="{i18n>officeThursdayClosedHr}" />
                    <TimePicker value="{
				path: '/time',
				type: 'sap.ui.model.type.Time'}" />
                    <Label text="{i18n>officeFriadayClosedHr}" />
                    <TimePicker value="{
				path: '/time',
				type: 'sap.ui.model.type.Time'}" />
                    <Label text="{i18n>officeSaturdayClosedHr}" />
                    <TimePicker value="{
				path: '/time',
				type: 'sap.ui.model.type.Time'}" />

                </f:content>
            </f:SimpleForm>

            <VBox alignContent="End" alignItems="End">
               <Button text="Save and Continue" enabled="false" type="Emphasized" press="onPressSaveBasicDetails"></Button>
           </VBox>
        </VBox>
    </ScrollContainer>
</mvc:View>