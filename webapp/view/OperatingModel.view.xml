<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="com.public.storage.pao.controller.OperatingModel"
    xmlns="sap.uxap"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form" height="100%">

    <ObjectPageLayout id="ObjectPageLayout" upperCaseAnchorBar="false">
        <headerTitle>
            <ObjectPageDynamicHeaderTitle>
                <expandedHeading>
                    <m:Title text="Operating Model Details" wrapping="true" />
                </expandedHeading>

                <snappedHeading>
                    <m:HBox>
                        <m:VBox>
                            <m:Title text="Operating Model Details" wrapping="true"/>
                            <m:Label text="Fill your operating model details"/>
                        </m:VBox>
                    </m:HBox>
                </snappedHeading>

                <expandedContent>
                    <m:Label text="Fill your operating model details"/>
                </expandedContent>

                <snappedTitleOnMobile>
                    <m:Title text="Operating Model Details"/>
                </snappedTitleOnMobile>

                <actions>
                    <m:Button text="Save and Continue" icon="sap-icon://save" enabled="true" type="Emphasized" press="onPressSaveOperatingModelDetails"></m:Button>
                </actions>
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>

        <headerContent>
            <m:FlexBox wrap="Wrap" fitContainer="true">
                <m:Avatar class="sapUiMediumMarginEnd sapUiSmallMarginBottom" src="sap-icon://developer-settings" displayShape="Circle" initials="OM" displaySize="L"/>

                <m:VBox class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
                    <m:Title level="H4" titleStyle="H4" text="Plant" class="sapUiTinyMarginBottom">
                    </m:Title>
                    <m:Label text="{plantsModel>/plant}"/>
                </m:VBox>

                <m:VBox class="sapUiSmallMarginBottom sapUiLargeMarginEnd">
                    <m:Title level="H4" titleStyle="H4" text="Property" class="sapUiTinyMarginBottom" />
                    <m:Label text="{plantsModel>/property}"/>
                </m:VBox>

                <m:VBox class="sapUiSmallMarginBottom">
                    <m:Title level="H4" titleStyle="H4" text="Address" class="sapUiTinyMarginBottom" />
                    <m:Label wrapping="true" text="{plantsModel>/address}"/>
                </m:VBox>
            </m:FlexBox>
        </headerContent>

        <sections>

            <ObjectPageSection titleUppercase="false" id="personalSection" title="Operating Model Details">
                <subSections>
                    <ObjectPageSubSection id="personalSectionSS1" titleUppercase="false">
                        <blocks>
                            <f:SimpleForm id="otherDetails" editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false">
                                <f:content>
                                    <core:Title text=""/>
                                    <m:Label text="{i18n>kioskmodel}" />
                                    <m:Select id="kioskmodel" change="onDetectChange" selectedKey="{parts: ['plantBasicDetailsModel>/KioskModel'], formatter: '.formatter.formatKiskModel'}">
                                        <m:items>
                                            <core:Item text="Yes" key="Y"/>
                                            <core:Item text="No" key="N" />
                                        </m:items>
                                    </m:Select>

                                    <m:Label text="{i18n>kioskDate}" />
                                    <m:DatePicker change="onDetectChange" id="kioskDate" value="{ 
                                        path: 'plantBasicDetailsModel>/KioskDate',
                                        type: 'sap.ui.model.type.Date'  
                                    }" valueFormat="yyyy-MM-dd" placeholder="Choose Date.."/>

                                    <m:Label text="{i18n>cddModel}" />
                                    <m:Select id="cddModel" change="onDetectChange" selectedKey="{parts: ['plantBasicDetailsModel>/CddModel'], formatter: '.formatter.formatCDDModel'}">
                                        <m:items>
                                            <core:Item text="Yes" key="Y"/>
                                            <core:Item text="No" key="N" />
                                        </m:items>
                                    </m:Select>

                                    <m:Label text="{i18n>cddDate}" />
                                    <m:DatePicker change="onDetectChange" id="cddDate" value="{ 
                                    path: 'plantBasicDetailsModel>/CddDate',
                                    type: 'sap.ui.model.type.Date'  
                                }" valueFormat="yyyy-MM-dd" placeholder="Choose Date.."/>

                                    <m:Label text="{i18n>satelliteModel}" />
                                    <m:Select id="satelliteModel" change="onDetectChange" selectedKey="{parts: ['plantBasicDetailsModel>/SatelliteModel'], formatter: '.formatter.formatSatelliteModel'}">
                                        <m:items>
                                            <core:Item text="Yes" key="Y"/>
                                            <core:Item text="No" key="N" />

                                        </m:items>
                                    </m:Select>

                                    <m:Label text="{i18n>satelliteDate}" />
                                        <m:DatePicker change="onDetectChange" id="satelliteDate" value="{ 
                                            path: 'plantBasicDetailsModel>/SatelliteDate',
                                            type: 'sap.ui.model.type.Date'  
                                        }" valueFormat="yyyy-MM-dd" placeholder="Choose Date.."/>
                                    <m:Label text="{i18n>satelliteHub}" />
                                    <m:Input id="satelliteHub" maxLength="5" value="{plantBasicDetailsModel>/SatelliteHub}"/>

                                    <m:Label text="{i18n>connectCareModel}" />
                                        <m:Select id="connectCareModel" change="onDetectChange" selectedKey="{parts: ['plantBasicDetailsModel>/SatelliteModel'], formatter: '.formatter.formatSatModel'}">
                                            <m:items>
                                                <core:Item text="Yes" key="Y"/>
                                                <core:Item text="No" key="N" />
    
                                            </m:items>
                                        </m:Select>

                                    <core:Title text=""/>

                                    <m:Label text="{i18n>kioskGp}" />
                                    <m:TextArea rows="2" id="kioskGp" maxLength="50" value="{plantBasicDetailsModel>/KioskGroup}"/>

                                    <m:Label text="{i18n>connectCareBuddy}" />
                                    <m:Input id="connectCareBuddy" maxLength="5" value="{plantBasicDetailsModel>/ConnectcareBuddy}"/>

                                    <m:Label text="{i18n>kioskBuddy}" />
                                    <m:Input id="kioskBuddy" maxLength="5" value="{plantBasicDetailsModel>/KioskBuddy}"/>

                                    <m:Label text="{i18n>cddGroup}" />
                                    <m:TextArea id="cddGroup" rows="2" maxLength="50" value="{plantBasicDetailsModel>/CddGroup}"/>

                                    <m:Label text="{i18n>satelliteGroup}" />
                                    <m:TextArea rows="2" id="satelliteGroup" maxLength="50" value="{plantBasicDetailsModel>/SatelliteGroup}"/>

                                    <m:Label text="{i18n>connectCareDate}" />
                                    <m:DatePicker change="onDetectChange" id="connectCareDate" value="{ 
                                    path: 'plantBasicDetailsModel>/ConnectcareDate',
                                    type: 'sap.ui.model.type.Date'  
                                    }" valueFormat="yyyy-MM-dd" placeholder="Choose Date.."/>

                                    <m:Label text="{i18n>connectCareGroup}" />
                                    <m:TextArea id="connectCareGroup" rows="2" maxLength="50" value="{plantBasicDetailsModel>/ConnectcareGroup}"/>

                                    

                                </f:content>
                            </f:SimpleForm>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>

        </sections>
    </ObjectPageLayout>
</mvc:View>